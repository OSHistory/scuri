{
  "name": "scuri",
  "version": "0.1.0",
  "description": "A spec generator schematic - Spec Create Update Read (class - component, service, directive and dependencies) Incorporate (them in the result)",
  "scripts": {
    "s": "schematics",
    "start": "npm run build && npm run s .:spec -- --name ./example/example.component.ts",
    "build": "tsc -p tsconfig.json",
    "build.test": "tsc -p tsconfig.test.json",
    "test": "npm run build.test && jasmine src/**/*_spec.js",
    "watch": "chokidar \"src/**/*.ts\" -c \"npm start\" --initial --ignore \"src/**/*.d.ts\""
  },
  "keywords": [
    "schematics"
  ],
  "author": "",
  "license": "MIT",
  "schematics": "./src/collection.json",
  "repository": "https://github.com/gparlakov/scuri",
  "dependencies": {
    "@angular-devkit/core": "^7.3.9",
    "@angular-devkit/schematics": "^7.3.9",
    "@angular-devkit/schematics-cli": "^0.800.1",
    "@types/jasmine": "^3.3.13",
    "@types/node": "^8.0.31",
    "jasmine": "^3.0.0",
    "typescript": "~3.2.2"
  },
  "devDependencies": {
    "@angular/cli": "^1.7.4",
    "chokidar-cli": "^1.2.2"
  }
}
