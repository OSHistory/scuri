{
  "$schema": "http://json-schema.org/schema",
  "id": "SpecSchema",
  "title": "Spec options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of component we create a spec for"
    },
    "update": {
      "type": "boolean",
      "default": false,
      "alias": "u",
      "description": "Whether or not to update a pre-existing spec file."
    }
  },
  "required": ["name"]
}
